<Window x:Class="Diplom.Teor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Border BorderBrush="Blue" BorderThickness="15" Padding="10">

        <Grid>
            <StackPanel Margin="10">
                <Button Content="Загрузить DOCX" Click="LoadDocxButton_Click" Width="150" Height="30" Margin="0,0,0,10"/>
                <Button Content="Выйти" Click="Button_Click" Width="150" Height="30"/>
                <RichTextBox x:Name="DocxTextBox" Width="Auto" Height="300"/>
            </StackPanel>
        </Grid>

    </Border>
</Window>
