<Window x:Class="Diplom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom"
        mc:Ignorable="d"
        >
    <Border BorderBrush="Blue" BorderThickness="15" >
        <Grid >
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="Resources/images.png" Width="200"/>
                <TextBox x:Name="Login" Width="120" Margin="0,10,0,0" TextWrapping="Wrap"/>
                <TextBox x:Name="Password" Width="120" Margin="0,5,0,0" TextWrapping="Wrap"/>
                <Button Content="Авторизоваться" Width="120" Margin="0,10,0,0" Click="Button_Click"/>
            </StackPanel>
        </Grid>

    </Border>
</Window>
