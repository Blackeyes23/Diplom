<Window x:Class="Diplom.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom"
        mc:Ignorable="d"
        Title="Главное окно"
        Height="600" Width="1000"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="SkyBlue">

    <Border BorderBrush="Blue" BorderThickness="15" Padding="10" Background="SkyBlue">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Левая колонка для фото -->
                <ColumnDefinition Width="*"/>
                <!-- Правая колонка для текста -->
            </Grid.ColumnDefinitions>

            <!-- Левая часть (Фото) -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <Image x:Name="UserPhoto" Source="Resources/DefaultUser.png" Width="200" Height="200" Stretch="UniformToFill"/>
            </StackPanel>

            <!-- Правая часть (Информация + Кнопки + Список) -->
            <StackPanel Grid.Column="1" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Текстовые данные -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Имя:" FontSize="20" FontWeight="Bold"/>
                    <TextBlock x:Name="NameText" FontSize="20" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Фамилия:" FontSize="20" FontWeight="Bold"/>
                    <TextBlock x:Name="SurnameText" FontSize="20" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Группа:" FontSize="20" FontWeight="Bold"/>
                    <TextBlock x:Name="GroupText" FontSize="20" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Роль:" FontSize="20" FontWeight="Bold"/>
                    <TextBlock x:Name="RoleText" FontSize="20" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button Content="Практика" Width="120" Height="50" Click="Button_Click_1"/>
                    <Button Content="Теория" Width="120" Height="50" Margin="20,0,0,0" Click="Button_Click_2"/>
                    <Button Content="Выйти" Width="120" Height="50" Margin="20,0,0,0" Click="Button_Click"/>
                </StackPanel>

                <!-- Список результатов -->
                <ListBox x:Name="ResultsList" Width="500" Height="200" Margin="0,30,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding TestName}" FontSize="16" />
                                <TextBlock Text="{Binding Score}" FontSize="16" />
                                <TextBlock Text="{Binding Correct}" FontSize="16" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </StackPanel>

        </Grid>
    </Border>
</Window>
